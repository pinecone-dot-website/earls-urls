{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./server",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "build-server",
    "sourceMap": true,
    "typeRoots": [
      "./types", 
      "./node_modules/@types"
    ],
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "build-server"],
  "include": [
    "server/**/*.ts", 
    "src/**/*.js", 
    "tests/**/*.ts", 
    "types/**/*.d.ts",
    "webpack.config.js"
  ],
  "files": ["server/app.ts"]
}
